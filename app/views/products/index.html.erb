<div class="product-index-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1573855619003-97b4799dcd8b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80)">
  Products
</div>
<div class="index-container">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col">
    <%= render 'product_card', product: product %>
    </div>
    <% end %>
  </div>
</div>
<div class="backlinks">
  <%= link_to "Add a new product", new_store_product_path, class: "button" %>
  <%= link_to "Back to the store", store_path(@store), class:"button" %>
</div>
