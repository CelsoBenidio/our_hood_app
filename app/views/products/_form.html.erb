<div class="container">
  <%= simple_form_for [@store, @product] do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.association :categories,input_html: { multiple: true, class:"select2" }, include_hidden: false, as: :select  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:"button" %>
    </div>
  <% end %>

  <%=  link_to "Back to all products", store_products_path, class:"button" %>
</div>
