<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Stores</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Name</th>
            <th>Address</th>
            <th>Description</th>
            <th>More Info</th>
          </thead>

            <tr>
              <td><%= @store.name %></td>
              <td><%= @store.address %></td>
              <td><%= @store.description %></td>
              <td><%= link_to "See more", store_products_path(@store) %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to "Back to all stores", stores_path, class: 'btn button m-1' %>
  <%= link_to "Delete", store_path(@store),
  method: :delete,
  data: {confirm: "Are you sure?"}, class: 'btn button-secondary m-1'%>
</div>
