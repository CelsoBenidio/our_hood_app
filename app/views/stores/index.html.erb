<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1576067767187-59250556582a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80');">
  <div class="banner-content">
    <h1>Our Hood stores</h1>
    <p>Awesome stores for developers</p>
    <%= link_to "Add a store", new_store_path, class: "btn btn-lg button" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @stores.each do |store| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path store.photo.key %>')">
          <div class="card-description">
            <h2><%= store.name %></h2>
          </div>
          <%= link_to "", store_path(store), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


