<div class="banner-store-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1473187983305-f615310e7daa?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)">
  <div class="container banner-content">
    <h2 style="padding-bottom: 10px">Manage your stores</h2>
    <p style="padding-bottom: 20px">Thousands of stores have increased their sales by an average of 20%.</p>
    <% if policy(Store).create? %>
      <%= link_to "Add a store", new_store_path, class: "btn btn-lg button" %>
    <% end %>
  </div>
</div>


<div class="container" style="padding-top: 20px">
  <h3 style="padding-bottom: 20px">Your store <strong>results</strong></h3>
  <div class="row">
    <% @stores.each do |store| %>
      <div class="col-12 col-md-6 col-lg-3" style="margin-bottom: 30px">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path store.photo.key %>')">
          <div class="card-description">
            <h2><%= store.name %></h2>
          </div>
          <%= link_to "", store_path(store), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
