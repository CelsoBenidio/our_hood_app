<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new store</h1>

      <%= simple_form_for @store do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Back to all stores", stores_path, class: 'btn btn-danger m-1'%>
    </div>
  </div>
</div>
